{% extends 'base.twig' %}

{% block title %}{{ __('install') }} - {{ __(step) }}{% endblock %}

{% block head %}
<link rel="stylesheet" type="text/css" href="{{ asset('/installer/css/style.css') }}">
{% endblock %}

{% block body %}
    <div class="layout">
        <header class="layout__header header">
            {{ include('components/logo.svg.twig', { class: 'header__logo' }) }}
            <h3 class="header__title">{{ __('installation-wizard') }}</h3>
        </header>
        <div class="layout__content page">
            {% if error %}<div class="page__error">{{ __(error) }}</div>{% endif %}
            {{ include('install/' ~ lang ~ '/' ~ step ~ '.twig') }}
        </div>
        <footer class="layout__footer footer">
            <div class="footer__version">
                Loxya, version <strong>{{ version() }}</strong>
            </div>
            <div class="footer__licence">
                &copy; Pulsanova 2017-{{ 'now'|date('Y') }} - Tous droits réservés.
            </div>
        </footer>
    </div>
{% endblock %}